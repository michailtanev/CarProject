@model IEnumerable<CarMarket.Domain.Car>



<div class="row">
    @foreach (var car in Model)
    {

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    @car.Model.Brand.Name
                    <small>@car.Model.Name</small>
                </h1>
            </div>
        </div>
        
        <div class="col-md-6">
            <img src="@Url.Action("Image", "Car", new { id = car.ImageId})" class="img-responsive" />
        </div>
        <div class="col-md-6">
            <h2 class="text-danger">$@car.Price</h2>
            <h3>Vehicle Details</h3>
            <ul class="list-group">
                <li class="list-group-item">Year: <p class="pull-right text-info">@car.Model.Year</p></li>
                <li class="list-group-item">Color: <p class="pull-right text-info">@car.Color</p></li>
                <li class="list-group-item">Mileage: <p class="pull-right text-info">@car.Mileage</p></li>
                <li class="list-group-item">Transmission: <p class="pull-right text-info">@car.Transmission</p></li>
                <li class="list-group-item">Fuel: <p class="pull-right text-info">@car.Fuel</p> </li>
                <li class="list-group-item">Cylinders: <p class="pull-right text-info">@car.NumberOfCylinders</p> </li>
            </ul>           
            <br />
        </div>
       


    }
    
</div>