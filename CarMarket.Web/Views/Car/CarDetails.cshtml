@model CarMarket.Web.Models.CarDetailsViewModel
@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           @Model.Brand
            <small>@Model.Model @Model.ModelYear</small>
        </h1>
    </div>
</div>
<div class="row">

    <div class="col-md-6">
        <img src="@Url.Action("Image", "Car", new { id = Model.ImageId })" class="img-responsive" />
    </div>

    <div class="col-md-6">
        <h2 class="text-danger" >$@Model.Price</h2>
        <h3>Vehicle Details</h3>
        <ul class="list-group">
            <li class="list-group-item">Color: <p class="pull-right text-info">@Model.Color</p></li>
            <li class="list-group-item">Mileage: <p class="pull-right text-info">@Model.Mileage</p></li>
            <li class="list-group-item">Transmission: <p class="pull-right text-info">@Model.Transmission</p></li>
            <li class="list-group-item">Fuel: <p class="pull-right text-info">@Model.Fuel</p> </li>
            <li class="list-group-item">Cylinders: <p class="pull-right text-info">@Model.NumberOfCylinders</p> </li>
        </ul>
        <h3>Seller Notes</h3>
        <div>@Model.SellerNotes</div>
        <h3>Contact Seller</h3>
        <div>
            <ul class="list-unstyled">
                <li>Phone: <p class="text-info">@Model.SellerPhone</p></li>
                <li>Email: <p class="text-info">@Model.SellerEmail</p></li>
            </ul>
        </div>
    </div>

</div>